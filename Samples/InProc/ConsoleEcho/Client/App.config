<?xml version="1.0" encoding="utf-8" ?>
<configuration>
   <system.serviceModel>
      <extensions>
         <bindingExtensions>
            <add name="inProcBinding" type="WcfEx.InProc.Binding+Config,WcfEx"/>
         </bindingExtensions>
         <behaviorExtensions>
            <!-- FQTN is required for .NET 4.0, fixed in 4.5 -->
            <add name="clientHost" type="WcfEx.ClientHostBehavior, WcfEx, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null"/>
         </behaviorExtensions>
      </extensions>
      <services>
         <service name="WcfEx.Samples.InProc.MockOutput">
            <endpoint address="inProc://this/InProcOutput/" binding="inProcBinding"
               contract="WcfEx.Samples.InProc.IConsoleOutput" />
         </service>
      </services>
      <client>
         <!-- Mock In-Process Server -->
         <endpoint
            contract="WcfEx.Samples.InProc.IConsoleOutput"
            binding="inProcBinding"
            address="inProc://this/InProcOutput/"
            behaviorConfiguration="inProcBehavior"/>
         <!-- Default TCP Server
         <endpoint
            contract="WcfEx.Samples.InProc.IConsoleOutput"
            binding="netTcpBinding"
            address="net.tcp://localhost:42200/ConsoleOutput/"/>
         -->
      </client>
      <behaviors>
         <endpointBehaviors>
            <behavior name="inProcBehavior">
               <clientHost/>
            </behavior>
         </endpointBehaviors>
      </behaviors>
   </system.serviceModel>
</configuration>
